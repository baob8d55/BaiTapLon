@model BaiTapLon.Models.TbKiTucXa

@{
    ViewData["Title"] = "Chỉnh sửa";
}
@section Heads
{
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" rel="stylesheet">


}
<h1 style="text-align:center;margin-bottom:20px;color:#adefd1ff;font-size:60px"><b>Chỉnh Sửa</b></h1>
<h2 class="text-center my-4" style="color:burlywood;font-size:50px"><b>Kí Túc Xá</b></h2>
<hr />
<body>
    <div class="row" style="display: flex; justify-content: center;">
        <div class="col-md-6 col-lg-4">
            @* /* Khoảng cách 20px giữa nội dung và viền */ *@
            @* /* Viền dày 2px, màu đen */ *@
            @* /* Góc viền được làm tròn với bán kính 8px */ *@
            @* /* Bóng đổ với độ dịch chuyển và độ mờ nhất định */ *@

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <hr />
            <div class="row">
                <div class="form-group">
                    <form asp-action="Edit" style="margin-top:20px; padding: 20px; border: 2px solid black; border-radius: 8px;  box-shadow: 10px 10px 15px 5px rgba(0, 0, 0, 0.5);background-color:white; color:black">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <input type="hidden" asp-for="IdKiTucXa" />
                        <div class="form-group">
                            <label asp-for="MaKyTucxa" class="control-label"></label>
                            <input style="border: 2px solid black;border-radius: 8px;" asp-for="MaKyTucxa" class="form-control" />
                            <span asp-validation-for="MaKyTucxa" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="IdHinhThucSoHuu" class="control-label"></label>
                            <select style="border: 2px solid black;border-radius: 8px;" asp-for="IdHinhThucSoHuu" class="form-control" asp-items="ViewBag.IdHinhThucSoHuu"></select>
                            <span asp-validation-for="IdHinhThucSoHuu" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="TongChoO" class="control-label"></label>
                            <input style="border: 2px solid black;border-radius: 8px;" asp-for="TongChoO" class="form-control" />
                            <span asp-validation-for="TongChoO" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="TongDienTich" class="control-label"></label>
                            <input style="border: 2px solid black;border-radius: 8px;" asp-for="TongDienTich" class="form-control" />
                            <span asp-validation-for="TongDienTich" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="IdTinhTrangCsvc" class="control-label"></label>
                            <select style="border: 2px solid black;border-radius: 8px;" asp-for="IdTinhTrangCsvc" class="form-control" asp-items="ViewBag.IdTinhTrangCsvc"></select>
                            <span asp-validation-for="IdTinhTrangCsvc" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="SoPhong" class="control-label"></label>
                            <input style="border: 2px solid black;border-radius: 8px;" asp-for="SoPhong" class="form-control" />
                            <span asp-validation-for="SoPhong" class="text-danger"></span>
                        </div>


                        <div class="d-flex justify-content-between mt-4">
                            <div class="form-group">
                                <button type="submit" class="btn btn-success">
                                    <i class="fas fa-check"></i> Lưu Lại
                                </button>
                            </div>
                            <div>
                                <a class="btn btn-primary" asp-action="Index">
                                    <i class="fa-solid fas fa-chevron-left" style="margin-right:5px"></i>Quay lại
                                </a>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</body>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
<style>
    .btn:hover {
    transform: translateY(-5px); /* Nổi lên khi hover */
    box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.2); /* Tạo bóng đổ */
    }

    .btn {
    border-radius: 20px; /* Bo góc nút */
    transition: all 0.3s ease;
    /* Hiệu ứng chuyển động cho nút */
    font-size: 18px; /* Tăng kích thước chữ */
    padding: 15px 30px; /* Tăng khoảng cách giữa các cạnh của nút */

    }

    body {
    /* Thiết lập màu nền đơn giản bằng mã RGB (màu hồng nhạt) */
            background: #34495e;
    /* Thiết lập nền gradient từ màu hồng nhạt ở trên cùng xuống màu xanh nhạt ở dưới cùng */`
    margin: 0;
    /* Đặt chiều cao của phần tử bằng 100% chiều cao của khung nhìn */
    height: 100vh;
    /* Thiết lập font chữ cho nội dung là Arial, nếu không có thì dùng font sans-serif mặc định */
    font-family: Arial, sans-serif;
    }

</style>


