@model BaiTapLon.Models.TbKiTucXa

@{
    ViewData["Title"] = "Chi Tiết";
}

@section Heads
{
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" rel="stylesheet">
}

<h1 style="text-align:center;margin-bottom:20px;color:#adefd1ff;font-size:60px"><b>Chi Tiết</b></h1>
<h2 class="text-center my-4" style="color:burlywood;font-size:50px"><b>Kí Túc Xá</b></h2>
<hr />
<body>
    <div class="row" style="display: flex; justify-content: center;">
        <div class="col-md-6 col-lg-4">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <hr />
            <div class="row">
                <div class="form-group">
                    <form style="margin-top:20px; padding: 20px; border: 2px solid black; border-radius: 8px; box-shadow: 10px 10px 15px 5px rgba(0, 0, 0, 0.5); background-color:white; color:black">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                        <!-- Hiển thị các thông tin chi tiết -->
                        <div class="form-group">
                            <label class="control-label">Mã Ký Túc Xá:</label>
                            <span class="form-control" style="border: 2px solid black; border-radius: 8px; background-color: #f1f1f1;">@Model.MaKyTucxa</span>
                        </div>
                        <div class="form-group">
                            <label class="control-label">Hình Thức Sở Hữu:</label>
                            <span class="form-control" style="border: 2px solid black; border-radius: 8px; background-color: #f1f1f1;">@Model.IdHinhThucSoHuuNavigation.HinhThucSoHuu</span>
                        </div>
                        <div class="form-group">
                            <label class="control-label">Tổng Chỗ Ở:</label>
                            <span class="form-control" style="border: 2px solid black; border-radius: 8px; background-color: #f1f1f1;">@Model.TongChoO</span>
                        </div>
                        <div class="form-group">
                            <label class="control-label">Tổng Diện Tích:</label>
                            <span class="form-control" style="border: 2px solid black; border-radius: 8px; background-color: #f1f1f1;">@Model.TongDienTich</span>
                        </div>
                        <div class="form-group">
                            <label class="control-label">Tình Trạng Cơ Sở Vật Chất:</label>
                            <span class="form-control" style="border: 2px solid black; border-radius: 8px; background-color: #f1f1f1;">@Model.IdTinhTrangCsvcNavigation.TinhTrangCoSoVatChat</span>
                        </div>
                        <div class="form-group">
                            <label class="control-label">Số Phòng:</label>
                            <span class="form-control" style="border: 2px solid black; border-radius: 8px; background-color: #f1f1f1;">@Model.SoPhong</span>
                        </div>

                        <!-- Chỉ hiển thị nút "Quay lại" -->
                        <div class="d-flex justify-content-between mt-4">
                            <div style="margin-left:270px">
                                <a class="btn btn-primary" asp-action="Index">
                                    <i class="fa-solid fas fa-chevron-left" style="margin-right:5px"></i>Quay lại
                                </a>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</body>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

<style>
    .btn:hover {
        transform: translateY(-5px); /* Nổi lên khi hover */
        box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.2); /* Tạo bóng đổ */
    }

    .btn {
        border-radius: 20px; /* Bo góc nút */
        transition: all 0.3s ease;
        font-size: 18px; /* Tăng kích thước chữ */
        padding: 15px 30px; /* Tăng khoảng cách giữa các cạnh của nút */
    }

    body {
        background: #34495e; /* Màu nền */
        margin: 0;
        height: 100vh;
        font-family: Arial, sans-serif;
    }
</style>