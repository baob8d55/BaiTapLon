@model BaiTapLon.Models.TbPhongThucHanh

@{
    ViewData["Title"] = "Chi Tiết";
}
@section Heads
{
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" rel="stylesheet">
}
<h1 style="text-align:center;margin-bottom:20px;color:#adefd1ff;font-size:60px"><b>Chi Tiết</b></h1>
<h2 class="text-center my-4" style="color:burlywood;font-size:50px"><b>Phòng Thực Hành</b></h2>
<hr />
<body>
    <div class="row" style="display: flex; justify-content: center;">
        <div class="col-md-6 col-lg-4">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <hr />
            <div class="row">
                <div class="form-group">
                    <!-- Form không cần cho "Edit", thay thế thành "Details" để chỉ hiển thị thông tin -->
                    <form style="padding: 20px; border: 2px solid black; border-radius: 8px; box-shadow: 10px 10px 15px 5px rgba(0, 0, 0, 0.5); background-color:white; color:black">
                        <!-- Hiển thị thông tin chi tiết, không cho phép chỉnh sửa -->
                        <div class="form-group">
                            <label asp-for="MucDoDapUngNhuCauNckh" class="control-label"></label>
                            <input style="border: 2px solid black;border-radius: 8px;" asp-for="MucDoDapUngNhuCauNckh" class="form-control" readonly />
                            <span asp-validation-for="MucDoDapUngNhuCauNckh" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="NamDuaVaoSuDung" class="control-label"></label>
                            <input style="border: 2px solid black;border-radius: 8px;" asp-for="NamDuaVaoSuDung" class="form-control" readonly />
                            <span asp-validation-for="NamDuaVaoSuDung" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="IdCongTrinhCsvcNavigation.TenCongTrinh" class="control-label"></label>
                            <input style="border: 2px solid black;border-radius: 8px;" asp-for="IdCongTrinhCsvcNavigation.TenCongTrinh" class="form-control" readonly />
                            <span asp-validation-for="IdCongTrinhCsvcNavigation.TenCongTrinh" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="IdLinhVucNavigation" class="control-label"></label>
                            <input style="border: 2px solid black;border-radius: 8px;" asp-for="IdLinhVucNavigation.LinhVucNghienCuu" class="form-control" readonly />
                            <span asp-validation-for="IdLinhVucNavigation.LinhVucNghienCuu" class="text-danger"></span>
                        </div>
                        <div class="d-flex justify-content-between mt-4">
                            <div style="margin-left:375px;">
                                <a class="btn btn-primary" asp-action="Index">
                                    <i class="fa-solid fas fa-chevron-left" style="margin-right:5px"></i>Quay lại
                                </a>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</body>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
<style>
    .btn:hover {
        transform: translateY(-5px); /* Nổi lên khi hover */
        box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.2); /* Tạo bóng đổ */
    }

    .btn {
        border-radius: 20px; /* Bo góc nút */
        transition: all 0.3s ease;
        font-size: 18px; /* Tăng kích thước chữ */
        padding: 15px 30px; /* Tăng khoảng cách giữa các cạnh của nút */
    }

    body {
        background: #34495e;
        height: 100vh;
        font-family: Arial, sans-serif;
    }
</style>
